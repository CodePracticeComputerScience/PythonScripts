import turtle

def draw_shapes():

    window = turtle.Screen()
    window.bgcolor("red")           #screen background color is red

    kachuaa = turtle.Turtle()
    kachuaa.shape("triangle")
    kachuaa.color("yellow")
    kachuaa.speed(3)
    for i in range (1,5):           #loop
        kachuaa.forward(100)
        kachuaa.right(90)
    
    window.bgcolor("blue")          #change background color to blue

    kachuaa = turtle.Turtle()
    kachuaa.shape("square")
    kachuaa.color("red")
    kachuaa.speed(1)
    for i in range(1,37):           #loop
        kachuaa.circle(50)
        kachuaa.right(10)

draw_shapes()
    
turtle.done()                       #will allow us to use output window controls.
